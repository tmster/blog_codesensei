<h1>List of articles</h1>

<%= form_tag articles_path, method: :get do %>
  <div class="input-group">
    <%= text_field_tag :q, params[:q] || "", class: "form-control" %>
    <span class="input-group-btn">
      <%= submit_tag "Search", class: "btn btn-default" %>
    </span>
  </div>
<% end %>

<h2><%= link_to "New article", new_article_path %></h2>
<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Text</th>
      <th>Author</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= article.author.email %></td>
        <td>Comments: <%= article.comments.count %></td>
        <td><%= link_to "Show", article_path(article), class: "btn btn-info" %></td>
        <td><%= link_to "Edit", edit_article_path(article), class: "btn btn-warning" %></td>
        <td><%= link_to "Destroy", article_path(article),
                class: "btn btn-danger",
                method: :delete,
                data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2><%= link_to "New article", new_article_path %></h2>
