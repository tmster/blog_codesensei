<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<p>
  <strong>Tags:</strong>
  <%= @article.tags.join(" ") %>
</p>
<p>
  <strong>Created at:</strong>
  <%= @article.created_at %>
</p>
<p>
  <strong>Updated at:</strong>
  <%= @article.updated_at %>
</p>

<%= render 'comments/form' %>

<h2>Comments</h2>

<%= render @article.comments.reload %>

<%= link_to "Back", articles_path %>
<%= link_to "Edit", edit_article_path(@article) %>
