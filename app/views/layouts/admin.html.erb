<!DOCTYPE html>
<html>
  <head>
    <title>Panel Admina</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if notice %>
      <div class="alert alert-info">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>

    <h1>Witaj adminie</h1>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
